

<% if user_signed_in? %>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email Address</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-outline-secondary" %>

<% else %>
<div class="card">
  <div class="card-header text-center bg-info">
    <h2>Friend App</h2>
  </div>
  <div class="card-body">
    <h5 class="card-title center-text">My first Ruby on Rails (Hello Wold) Application</h5>
    <p class="card-text">This is my first Ruby on Rails Webapp...</p>
  </div>
</div>
<% end %>
